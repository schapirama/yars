<% @title = "Log in" %>

<% form_tag session_path do -%>

	<p><%= label_tag 'email' %><br />
	<%= text_field_tag 'email', @email, :size => 25 %></p>

	<p><%= label_tag 'password' %><br/>
	<%= password_field_tag 'password', nil, :size => 14 %></p>

	<p><%= label_tag 'remember_me', 'Remember me' %>
	<%= check_box_tag 'remember_me', '1', @remember_me %></p>

	<p><%= submit_tag 'Log in' %> or <%= link_to "Sign up", signup_url %></p> 
	<p><%= link_to "Forgot your password?", amnesia_url %></p> 
	
<% end -%>
